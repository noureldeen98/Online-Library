@model IEnumerable<OnlineLibrary.Models.Book>
@{
    ViewBag.Title = "Search for Book";
}
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    </head>
<h2>Search</h2>
@*<p>
        <a href="@Url.Action("Create","Books")" class="btn btn-primary" target="_blank">
            <span class="glyphicon glyphicon-heart"></span>
            New Book
        </a>
    </p>*@
<p>
    @using (Html.BeginForm("Search", "Books", FormMethod.Get))
    {
        <b>Search:</b>
        @Html.TextBox("key")
        <input type="submit" value="search" class="btn btn-primary" />
    }
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bauthor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bprice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.no_of_books)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.catagry_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.publisher_id)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bauthor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bprice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.no_of_books)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.catagry_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.publisher_id)
            </td>
            <td>
                @*<a href="@Url.Action("Edit","Books",new { id=item.BId}) " class="btn btn-success ">
                        <span class="glyphicon glyphicon-arrow-up"></span>
                        Edit
                    </a> |
                    <a href="@Url.Action("Details","Books",new { id=item.BId}) " class="btn btn-toolbar ">
                        <span class="glyphicon glyphicon-baby-formula"></span>
                        Details
                    </a>
                    <a href="@Url.Action("Delete","Books",new { id=item.BId}) " class="btn btn-danger ">
                        <span class="glyphicon glyphicon-arrow-down"></span>
                        Delete
                    </a>*@
               
                <div class="container">
                    <a class="btn btn-success" data-toggle="popover" title="Online-Library" data-content="Borrow is done" href="@Url.Action("Borrow","Books", new {id=item.BId })">Borrow</a>

                    <a class="btn btn-success" data-toggle="popover" title="Online-Library" data-content="Thanks for return the book" href="@Url.Action("Return_Book","Books", new {id=item.BId })">Return</a>
                </div>
             </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Back to home", "Index", "Home", null, new { @class = "btn btn-info" })
</p>

<p>
    @Html.ActionLink("User Editing", "Index", "Admin", null, new { @class = "btn btn-info" })
</p>

<script>
    $(document).ready(function () {
        $('[data-toggle="popover"]').popover();
    });
</script>